<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="contentHeading">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#3F89C3</item>
		<item name="android:paddingLeft">5px</item>
	</style>
	<style name="contentStyle">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#5A5A5A</item>
		<item name="android:textSize">14px</item>
		<item name="android:lineSpacingExtra">1px</item>
	</style>
	<style name="contentStylePadding">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#5A5A5A</item>
		<item name="android:textSize">14px</item>
		<item name="android:lineSpacingExtra">1px</item>
		<item name="android:padding">3sp</item>
	</style>
	<style name="contentImagePadding">
		<item name="android:paddingTop">1px</item>
		<item name="android:paddingLeft">5px</item>
		<item name="android:paddingRight">20px</item>
	</style>
	<style name="contentSpacing">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">5px</item>
	</style>
	<style name="rssFeedStyle">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#5A5A5A</item>
		<item name="android:paddingLeft">5px</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="androidTheme" parent="android:Theme">
		<item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>
	</style>
	<style name="Widget.TabWidget" parent="@android:style/Widget.TabWidget">
		<item name="android:textAppearance">@style/TextAppearance.Widget.TabWidget
		</item>
		<item name="android:cacheColorHint">#000000</item>
	</style>
	<style name="TextAppearance.Widget.TabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
</resources>